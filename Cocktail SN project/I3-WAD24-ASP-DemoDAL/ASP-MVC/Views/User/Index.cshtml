@model IEnumerable<ASP_MVC.Models.User.UserListItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Last_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                <div class="btn-group">
                        @Html.ActionLink("Edit", "Edit", null, new { id=item.User_Id }, new { @class = "btn btn-secondary"})
                        @Html.ActionLink("Details", "Details", null, new { id = item.User_Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", null, new { id = item.User_Id }, new { @class = "btn btn-danger" })
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
