@{
    int table = 0;
    if(ViewData.ContainsKey("table"))
    {
        table = (int)ViewData["table"];
    } // Here this is just idiot-proofing against other devs who might put something weird in the controller that doesn't provide "table" information


    int dynamicTable = 0;
    if (ViewData.ContainsKey("table"))
    {
        dynamicTable = ViewBag.table;
    }


<!DOCTYPE html>
<html lang="fr-be">


<head>
    <meta charset="utf-8" />
    <meta name="viewport content=" width="device-width, initial-scale=1" />
    <title>Demo ASP MVC : </title>
</head>

<body>

    <h1>Table</h1>
    <h2>Table de @table</h2>
    <h3>A l'aide du ViewData</h3>
    <ul>
        @for(int i = 1; i <= 10; i++){
            <li>@i X @table = @(table * i)</li>
        }
    </ul>

    <h3>A l'aide du ViewBag</h3>
    <ul>
        @for (int i = 1; i <= 10; i++)
        {
            <li>@i X @dynamicTable = @(dynamicTable * i)</li>
        }
    </ul>


</body>
</html>
}
